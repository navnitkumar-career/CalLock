<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="3dp" card_view:cardElevation="2dp" card_view:cardUseCompatPadding="true">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/rl_thumimage" android:background="@color/ColorWhite" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_thumimage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp">
                <ImageView android:id="@+id/thumbImage" android:background="@drawable/ic_audio_list_empty_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_textAlbumName" android:layout_width="220dp" android:layout_height="wrap_content" android:layout_toRightOf="@+id/ll_thumimage" android:layout_centerVertical="true">
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="17sp" android:textColor="@color/text_primary_dark" android:layout_gravity="center_vertical" android:id="@+id/textAlbumName" android:layout_width="match_parent" android:layout_height="25dp" android:layout_marginTop="6dp" android:text="Sample Audio" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_selection" android:background="@drawable/album_grid_item_boarder_unselect" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>
