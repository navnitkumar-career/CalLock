<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/black_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />

            <HorizontalScrollView
                android:id="@+id/display_hsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/display_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:text="text"
                        android:textColor="@color/White"
                        android:textSize="@dimen/display_primary_text_port" />
                </LinearLayout>
            </HorizontalScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/display_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:text="text"
                android:textColor="@color/White"
                android:textSize="@dimen/display_secondary_text_port" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/display_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="#fff"
            android:orientation="horizontal" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/standard_margin"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_sin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="sin"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_cos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="cos"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_tan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="tan"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_ln"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="ln"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_log"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="log"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_factorial1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="!"
                android:textSize="@dimen/panel_2_button_text_port" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_pi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="π"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_e"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="e"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_square_root1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="√"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_start_parenthesis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="("
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_end_parenthesis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text=")"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:id="@+id/button_exponent111"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="%"
                android:textSize="@dimen/panel_2_button_text_port" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/button_square_root"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="√"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_2_button_text_port" />
            /&gt; <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/gray" />

            <TextView
                android:id="@+id/button_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_backspace_black_24dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />
        </LinearLayout>

        <TextView
            android:layout_width="1.5px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/button_factorial"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="!"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />
        </LinearLayout>

        <TextView
            android:layout_width="1.5px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/button_exponent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_2_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_decimal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="."
                android:textColor="@color/black_color"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />
        </LinearLayout>

        <TextView
            android:layout_width="1.5px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ColorAppTheme"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/button_divide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="÷"
                android:textColor="@color/White"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_multiply"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="×"
                android:textColor="@color/White"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_subtract"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="−"
                android:textColor="@color/White"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/White"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/button_equals"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="="
                android:textColor="@color/White"
                android:textSize="@dimen/panel_1_button_text_port" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
